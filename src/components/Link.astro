---
interface Props {
  href: string;
  originalUrl?: string;
}
const { href, originalUrl } = Astro.props;
const host = originalUrl?.split("/")[2] || ""; // 获取域名地址
const original = host.split(".").slice(0, -2).join("."); //获取子域名
const url = !original ? href : originalUrl;
---

<a href={url}
  ><slot />
  {
    original == "garden" && (
      <span class="hint--top hint--success" aria-label="点击进入数字花园～">
        🌱
      </span>
    )
  }
  {
    original == "brain" && (
      <span class="hint--top hint--error" aria-label="点击进入第二大脑～">
        🧠
      </span>
    )
  }</a
>
